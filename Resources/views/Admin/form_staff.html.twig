{% trans_default_domain 'expertise' %}

{{ form_start(form, {'attr': {'class': 'uk-form-stacked'}}) }}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <section>
                        <div class="uk-grid">
                            <div class="uk-width-medium-1-2 parsley-row">
                                {{ form_label(form.firstName, 'expertise.staff.form.first_name'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                                {{ form_widget(form.firstName, {'attr': {'class': 'md-input'}}) }}
                            </div>
                            <div class="uk-width-medium-1-2 parsley-row">
                                {{ form_label(form.lastName, 'expertise.staff.form.last_name'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                                {{ form_widget(form.lastName, {'attr': {'class': 'md-input'}}) }}
                            </div>
                        </div>
                        <div class="uk-grid uk-grid-width-medium-1-2" data-uk-grid-margin>
                            <div class="parsley-row">
                                {{ form_label(form.phoneNumber, 'expertise.staff.form.phone_number'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                                {{ form_widget(form.phoneNumber, {'attr': {'class': 'md-input'}}) }}
                            </div>
                            <div class=" parsley-row">
                                {{ form_label(form.email, 'expertise.staff.form.email'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'md-input'}}) }}
                            </div>
                        </div>
                        <div class="uk-grid uk-grid-width-medium-1-2" data-uk-grid-margin>
                            <div class="parsley-row">
                                {{ form_label(form.position, 'expertise.staff.form.position'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                                {{ form_widget(form.position, {'attr': {'class': 'md-input'}}) }}
                            </div>
                            <div class="parsley-row">
                                <div class="uk-input-group">
                                    <span class="uk-input-group-addon">
                                        <i class="uk-input-group-icon fa fa-linkedin"></i>
                                    </span>
                                    <div class="md-input-wrapper">
                                        {#{{ form_label(form.linkedIn, 'expertise.staff.form.linkedin'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}#}
                                        {{ form_widget(form.linkedIn, {'attr': {'class': 'md-input'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="uk-form-row uk-margin">
                            <div class="uk-grid uk-margin-bottom uk-margin-small-top">
                                <div class="uk-width-medium-1-2">
                                    <div class="form-group">
                                        <div class="uk-input-group">
                                            <span class="uk-input-group-addon">
                                                <i class="uk-input-group-icon fa fa-facebook"></i>
                                            </span>
                                            <div class="md-input-wrapper">
                                                {#{{ form_label(form.facebook, 'expertise.staff.form.facebook'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}#}
                                                {{ form_widget(form.facebook, {'attr': {'class': 'md-input'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-2">
                                    <div class="form-group">
                                        <div class="uk-input-group">
                                            <span class="uk-input-group-addon">
                                                <i class="uk-input-group-icon fa fa-twitter"></i>
                                            </span>
                                            <div class="md-input-wrapper">
                                                {#{{ form_label(form.twitter, 'expertise.staff.form.twitter'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}#}
                                                {{ form_widget(form.twitter, {'attr': {'class': 'md-input'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="uk-form-row uk-margin">
                            {{ form_label(form.description, 'expertise.staff.form.description'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'md-input', 'rows': 5, 'cols': 100}}) }}
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-3-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-form-row">
                        {{ form_label(form.service, 'expertise.staff.form.service'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.service, {'attr': {'data-md-selectize': true}}) }}
                    </div>
                </div>
            </div>

            {{ render(controller('MediaBundle:Admin:embedFile', {'formData': form.picture, 'data': staff is defined ? staff.picture : null, 'type': 'picture', 'context': 'expertise/staff', 'multiple': false })) }}
        </div>
    </div>

    <div class="uk-margin-top">
        <a class="md-btn md-btn-default" href="{{ staff is defined ? url('puzzle_admin_expertise_staff_show', {'id': staff.id}) : url('puzzle_admin_expertise_staff_list') }}">
            {{ 'expertise.staff.form.back'|trans }}
        </a>
        <button class="md-btn md-btn-success" type="submit">
            {{ staff is defined ? 'expertise.staff.form.update'|trans : 'expertise.staff.form.create'|trans }}
        </button>
    </div>
{{ form_end(form) }}
