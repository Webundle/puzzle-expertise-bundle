{% trans_default_domain 'expertise' %}

{{ form_start(form) }}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10 uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-form-row">
                        {{ form_label(form.author, 'expertise.testimonial.form.author'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.author, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.company, 'expertise.testimonial.form.company'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.company, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.position, 'expertise.testimonial.form.position'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.position, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.message, 'expertise.testimonial.form.message'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.message, {'attr': {'class': 'md-input', 'rows': 10, 'cols': 10}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-3-10 uk-width-large-3-10">
            {{ render(controller('MediaBundle:Admin:embedFile', {'formData': form.picture, 'data': testimonial is defined ? testimonial.picture : null, 'type': 'picture', 'context': 'expertise/testimonial', 'multiple': false })) }}
        </div>
    </div>

    <div class="uk-text-left uk-margin-top">
        <a class="md-btn md-btn-default" href="{{ testimonial is defined ? url('puzzle_admin_expertise_testimonial_show', {'id': testimonial.id}) : url('puzzle_admin_expertise_testimonial_list') }}">
            {{ 'expertise.testimonial.form.back'|trans }}
        </a>
        <button class="md-btn md-btn-success" type="submit">
            {{ testimonial is defined ? 'expertise.testimonial.form.update'|trans : 'expertise.testimonial.form.create'|trans }}
        </button>
    </div>
{{ form_end(form) }}