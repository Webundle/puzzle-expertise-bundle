{% trans_default_domain 'expertise' %}

{% extends 'ExpertiseBundle:Admin:layout.html.twig' %}

{% block title %} {{ parent() }} - {{ "expertise.pricing.show.title"|trans|capitalize }} {{ pricing.name }} {% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href=" {{ url('puzzle_admin_expertise_pricing_list') }} ">
       {{ 'expertise.pricing.list.title'|trans|capitalize }}
    </a>
    <i class="fa fa-chevron-right"></i>
    <em>{{ "expertise.pricing.show.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
     <div id="page_content_inner">
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-1-2">
                <div class="md-card">
                    <div class="md-card-content">
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.name'|trans }} : </label>
                            <span>{{ pricing.name }}</span>
                        </div>

                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.period'|trans }} : </label>
                            <span>{{ pricing.period|default('expertise.pricing.show.undefined'|trans) }}</span>
                        </div>

                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.amount'|trans }} : </label>
                            <span>{{ pricing.amount|default('expertise.pricing.show.undefined'|trans) }}</span>
                        </div>

                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.currency'|trans }} : </label>
                            <span>{{ pricing.currency|default('expertise.pricing.show.undefined'|trans) }}</span>
                        </div>

                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.description'|trans }} : </label>
                            {% if pricing.description is not empty %}
                                <span>{{ pricing.description }}</span>
                            {% else %}
                            	<span>{{ 'expertise.pricing.show.undefined'|trans }}</span>
                            {% endif %}
                        </div>

                    </div>
                </div>
            </div>
            <div class="uk-width-1-2">
                <div class="md-card">
                    <div class="md-card-content">
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.created_by'|trans }} : </label>
                            <span>{{ pricing.createdBy }}</span>
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.created_at'|trans }} : </label>
                            <span>{{ date_time_ago(pricing.createdAt) }}</span>
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.updated_by'|trans }} : </label>
                            <span>{{ pricing.updatedBy }}</span>
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'expertise.pricing.show.updated_at'|trans }} : </label>
                            <span>{{ date_time_ago(pricing.updatedAt) }}</span>
                        </div>
                    </div>
                </div>
            </div>
            {%  if pricing.description is not empty %}
            	<div class="uk-width-1-1">
                    <div class="md-card">
                        <div class="md-card-content">
                            {{ pricing.description|raw }}
                        </div>
                    </div>
                </div>
			{% endif %}

            <div class="uk-text-center uk-margin-top">
                <a href="{{ url('puzzle_admin_expertise_pricing_update', { 'id': pricing.id }) }}" class="md-btn md-btn-primary" id="{{ pricing.id }}">
                    <i class="fa fa-pencil"></i>
                    {{ "expertise.pricing.show.update"|trans }}
                </a>
                <a href="#" class="remove-item md-btn md-btn-danger" data-route="{{ url('puzzle_admin_expertise_pricing_delete', {'id' : pricing.id}) }}" data-label="{{ pricing.name }}" data-title="{{ 'expertise.pricing.delete.title' }}" data-text="{{ 'expertise.pricing.delete.description'|trans({'%pricingName%': pricing.name}) }}">
                    <i class="fa fa-trash-o"></i>
                    {{ "expertise.pricing.show.delete"|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
